<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#c7c7c6"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvInfoD04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twice - Signal"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tvViewsD04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Views: "
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imageD041"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/freystar"/>
                <ImageView
                    android:id="@+id/imageD042"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/freystar"/>
                <ImageView
                    android:id="@+id/imageD043"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/freystar"/>
                <ImageView
                    android:id="@+id/imageD044"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/freystar"/>
                <ImageView
                    android:id="@+id/imageD045"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/freystar"/>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btnRateD04"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:background="#2c7084"
            android:textColor="#ffffff"/>
    </LinearLayout>


</RelativeLayout>