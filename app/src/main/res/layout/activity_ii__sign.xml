<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cuong.blackjack.Activity.II_Sign">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#c7c7c6"
        android:id="@+id/ll02">
        <TextView
            android:id="@+id/tvUserName02"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="User Name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:background="#2c7084"/>


        <TextView
            android:id="@+id/tvPlayList02"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:text="     My Playlist"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="#2c7084"
            />

        <TextView
            android:id="@+id/tvModPassword02"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="     Change Pasword"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="#2c7084"
            />

        <TextView
            android:id="@+id/tvLogOut02"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="      Log out"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="#2c7084"
            />

    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
</RelativeLayout>
